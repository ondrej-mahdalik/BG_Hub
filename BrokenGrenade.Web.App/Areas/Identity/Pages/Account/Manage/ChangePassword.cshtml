@page
@using Microsoft.Extensions.Localization
@using BrokenGrenade.Web.App.Resources.Areas.Identity.Pages.Account.Manage
@model ChangePasswordModel
@inject IStringLocalizer<ChangePasswordResource> Localizer
@{
    ViewData["Title"] = Localizer[nameof(ChangePasswordResource.ChangePasswordTitle)];
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
    Layout = "_Layout";
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<form id="change-password-form" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
    <div class="mb-3">
        <label asp-for="Input.OldPassword" class="form-label">@Html.DisplayNameFor(m => m.Input.OldPassword)</label>
        <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true"/>
        <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.NewPassword" class="form-label">@Html.DisplayNameFor(m => m.Input.NewPassword)</label>
        <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true"/>
        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.ConfirmPassword" class="form-label">@Html.DisplayNameFor(m => m.Input.ConfirmPassword)</label>
        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true"/>
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">@Localizer[nameof(ChangePasswordResource.ChangePasswordButton)]</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
