@page
@using Microsoft.Extensions.Localization
@using BrokenGrenade.Web.App.Resources.Areas.Identity.Pages.Account.Manage
@model ResetAuthenticatorModel
@inject IStringLocalizer<ResetAuthenticatorResource> Localizer
@{
    ViewData["Title"] = Localizer[nameof(ResetAuthenticatorResource.ResetAuthenticatorTitle)];
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
    Layout = "_Layout";
}

<partial name="_StatusMessage" for="StatusMessage" />
<h3>@ViewData["Title"]</h3>
<div class="alert alert-warning" role="alert">
    <p>
        <i class="fa-solid fa-triangle-exclamation"></i>
        <strong>@Localizer[nameof(ResetAuthenticatorResource.ResetAuthenticatorAlertTitle)]</strong>
    </p>
    <p>@Localizer[nameof(ResetAuthenticatorResource.ResetAuthenticatorAlertMessage)]</p>
</div>
<div>
    <form id="reset-authenticator-form" method="post">
        <button id="reset-authenticator-button" class="btn btn-danger" type="submit">@Localizer[nameof(ResetAuthenticatorResource.ResetAuthenticatorButton)]</button>
    </form>
</div>
