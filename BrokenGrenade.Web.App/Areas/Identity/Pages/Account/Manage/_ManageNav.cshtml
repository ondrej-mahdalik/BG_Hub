@inject IStringLocalizer<LayoutResource> Localizer

<ul class="nav nav-pills flex-column ps-2">
    <li class="nav-item">
        <a class="nav-link btn-sharp @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">
            <i class="fa-solid fa-user fa-fw"></i> @Localizer[nameof(LayoutResource.NavProfile)]
        </a>
    </li> 
    <li class="nav-item">
        <a class="nav-link btn-sharp @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">
