        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link btn-sharp @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">
            <i class="fa-solid fa-unlock fa-fw"></i> @Localizer[nameof(LayoutResource.NavPassword)]
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link btn-sharp @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)" id="two-factor" asp-page="./TwoFactorAuthentication">
            <i class="fa-solid fa-shield-halved fa-fw"></i> @Localizer[nameof(LayoutResource.Nav2fa)]
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link btn-sharp @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data" asp-page="./PersonalData">
